				{
					"name": "channelId",
					"type": "string",
					"value": "\"kafka-1\"",
					"metaName": "Channel ID",
					"metaDescription": "The Kafka channel ID as configured in triggers/kafka.yml."
				},
				{
					"name": "message",
					"type": "object",
					"value": "{\"data\":\"From flow\"}",
					"metaName": "Message",
					"metaDescription": "The message to publish."
				},
				{
					"name": "topic",
					"type": "string",
					"value": "\"quickstart-events\"",
					"metaName": "Topic",
					"metaDescription": "The topic."
				}
			],
			"outputs": {
				"next": {
					"routes": [],
					"metaName": "Next"
				},
				"error": {
					"routes": [],
					"context": "$.error",
					"metaName": "Error"
				}
			},
			"metaMethod": "Publish JSON"
