{
	"schemaVersion": "4",
	"info": {
		"name": "Kafka producer flow",
		"description": "Example of how to write messages to a Kafka topic."
	},
	"parameter": {
		"properties": {
			"params": {},
			"request": {
				"description": "The request"
			},
			"config": {
				"type": "object",
				"description": "The service's configuration"
			},
			"env": {
				"type": "object",
				"description": "The host OS environment"
			}
		},
		"additionalProperties": false
	},
	"start": "kafka.1",
